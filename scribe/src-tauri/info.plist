<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!-- Microphone Access - Only for voice input, NOT for system audio capture -->
  <key>NSMicrophoneUsageDescription</key>
  <string>Scribe needs access to your microphone for voice input functionality. System audio capture uses virtual audio devices and does not access your microphone.</string>
  
  <!-- Screen Capture -->
  <key>NSScreenCaptureUsageDescription</key>
  <string>Scribe needs access to screen capture for screenshot functionality</string>
  
  <!-- System Audio -->
  <key>NSAudioCaptureUsageDescription</key>
  <string>Scribe needs access to system audio to process transcription and AI responses.</string>

  <!-- Privacy - Audio Processing -->
  <key>NSPrivacyAccessedAPITypes</key>
  <array>
    <dict>
      <key>NSPrivacyAccessedAPIType</key>
      <string>NSPrivacyAccessedAPICategoryAudioProcessing</string>
      <key>NSPrivacyAccessedAPITypeReasons</key>
      <array>
        <string>C617.1</string>
      </array>
    </dict>
  </array>
  
  <!-- Hardened Runtime Entitlements -->
  <key>com.apple.security.device.microphone</key>
  <true/>
  <key>com.apple.security.device.audio-input</key>
  <true/>
</dict>
</plist>
